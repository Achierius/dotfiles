# set terminal to proper code page for displaying UTF-8
# Windows only?
# chcp 65001
export LANG=en_US.UTF-8

# make tmux use unicode support
alias tmux='tmux -u'

# useful command for dumping to Windows desktop folder
alias deskdump="cp --dereference -r -t/mnt/c/Users/Marcus\ Plutowski/Desktop/Sharing/FromDebian"


# automatically run ssh-agent for git
env=~/.ssh/agent.env

agent_load_env () { test -f "$env" && . "$env" >| /dev/null ; }

agent_start () {
  (umask 077; ssh-agent >| "$env")
  . "$env" >| /dev/null ; }

  agent_load_env

# agent_run_state: 0=agent running w/ key; 1=agent w/o key; 2= agent not running
agent_run_state=$(ssh-add -l >| /dev/null 2>&1; echo $?)

if [ ! "$SSH_AUTH_SOCK" ] || [ $agent_run_state = 2 ]; then
  agent_start
  ssh-add
elif [ "$SSH_AUTH_SOCK" ] && [ $agent_run_state = 1 ]; then
  ssh-add
fi

# location of my dotfiles repo
export DOTFILE_HOME=~/dotfiles

unset env
